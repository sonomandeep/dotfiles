# Bauhaus & Swiss Design Theme
theme = "TokyoNight"

# Typography and Font rendering
font-family = "Geist Mono"
font-family-bold = true
font-size = 14

# Window appearance and padding
macos-titlebar-style = hidden
window-padding-x = 20
window-padding-y = 18
window-padding-balance = true

# Force window dimensions to snap to the character grid
window-step-resize = true

# Cursor style (solid block for Bauhaus aesthetic)
cursor-style = block
cursor-style-blink = false

# Background and contrast settings
background-opacity = 1.0
minimum-contrast = 1.1

# Mouse and interaction behavior
mouse-hide-while-typing = true
copy-on-select = true
confirm-close-surface = false
